    async def _show_status(self):
        """Show system status."""
        print("ü§ñ Bot: üîÑ System Status:")
        
        # Check AI provider
        try:
            ai_status = await self.ai_handler.health_check()
            provider_name = self.config.ai_provider.upper()
            status = "‚úÖ Online" if ai_status else "‚ùå Offline"
            print(f"  ü§ñ {provider_name} AI: {status}")
        except:
            print(f"  ü§ñ AI: ‚ùå Error")
        
        # Check Binance
        try:
            await self.binance.get_current_btc_price()
            print(f"  üìà Binance API: ‚úÖ Online")
        except Exception:
            print(f"  üìà Binance API: ‚ùå Offline")
        
        print(f"  üîí Trading: {'‚úÖ Enabled' if self.config.enable_trading else '‚ùå Disabled'}")
        print(f"  üß™ Testnet: {'Yes' if self.config.binance_testnet else 'No'}")
    
    async def _show_ai_status(self):
        """Show AI provider status."""
        try:
            health_results = await AIFactory.test_provider_health(self.config)
            
            print("ü§ñ Bot: ü§ñ AI Provider Status:")
            print(f"  Current Provider: {self.config.ai_provider.upper()}")
            
            for provider, is_healthy in health_results.items():
                status = "‚úÖ Available" if is_healthy else "‚ùå Unavailable"
                print(f"  ‚Ä¢ {provider.upper()}: {status}")
                
                if provider == "ollama" and is_healthy:
                    print(f"    Model: {self.config.ollama_model}")
                elif provider == "openai" and is_healthy:
                    print(f"    Model: {self.config.openai_model}")
                elif provider == "gemini" and is_healthy:
                    print(f"    Model: {self.config.gemini_model}")
            
            print("  ‚ÑπÔ∏è To change AI provider, update AI_PROVIDER in .env file")
            
        except Exception as e:
            print(f"‚ùå Error checking AI status: {e}")
    
    async def _test_intent_classification(self):
        """Test the intent classification system."""
        print("üß™ Testing Function Selector System")
        print("="*50)
        
        test_messages = [
            "What's the current BTC price?",
            "How much USDT do I have?",
            "What's my portfolio worth?",
            "Should I buy Bitcoin now?",
            "Is it risky to trade now?",
            "Give me trading advice",
            "Market is too volatile",
            "Should I rebalance my portfolio?",
            "What can this bot do?",
            "xyzabc123nonsense"
        ]
        
        for message in test_messages:
            try:
                print(f"\nüìù Testing: '{message}'")
                
                # Use function selector to process the request
                result = await self.function_selector.process_user_request(message)
                
                print(f"üéØ Response Type: {result['response_type']}")
                print(f"‚úÖ Success: {result['success']}")
                
                if "intent_info" in result:
                    intent_info = result["intent_info"]
                    print(f"üîç Intent: {intent_info['intent']}")
                    print(f"üîç Confidence: {intent_info['confidence']:.2f}")
                    print(f"üìÑ Function Used: {intent_info['function_used']}")
                
                # Show abbreviated response
                response_preview = result["message"][:100] + "..." if len(result["message"]) > 100 else result["message"]
                print(f"ÔøΩ Response Preview: {response_preview}")
                
            except Exception as e:
                print(f"‚ùå Error testing '{message}': {e}")
        
        print("\n‚úÖ Function selector test completed!")
    
    
    def handle_signal(self, signum, frame):
        """Handle shutdown signals."""
        logger.info(f"Received signal {signum}, shutting down...")
        asyncio.create_task(self.stop())"""Handle shutdown signals."""
        logger.info(f"Received signal {signum}, shutting down...")
        asyncio.create_task(self.stop())


async def main():
    """Main entry point."""
    app = TradingBotApp()
    
    # Set up signal handlers
    signal.signal(signal.SIGINT, app.handle_signal)
    signal.signal(signal.SIGTERM, app.handle_signal)
    
    try:
        await app.start()
    except KeyboardInterrupt:
        logger.info("Received keyboard interrupt")
    except Exception as e:
        logger.error(f"Application error: {e}")
        sys.exit(1)
    finally:
        await app.stop()


if __name__ == "__main__":
    asyncio.run(main())
